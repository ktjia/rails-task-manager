<h1>My To-Do List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <div id="task-name">
        <%= link_to task do %>
          <%= task.name %>
        <% end %>
      </div>
      <div class="link-delete">
        <%= link_to "Delete this task", task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" }%>

          <%= link_to "Edit this task", edit_task_path(@task) %>
      </div>
    </li>
  <% end %>
</ul>

<h3><%= link_to "Add a new task", new_task_path %></h3>
